<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Um Diagnoseablaufverfolgungen zu erfassen, heben Sie die Kommentierung des folgenden Abschnitts auf oder fügen Sie sie mit dem Abschnitt zur Systemdiagnose zusammen.
        Um die Ablaufverfolgungen im Speicher beizubehalten, aktualisieren Sie die DiagnosticsConnectionString-Einstellung mit Ihren Speicheranmeldeinformationen.
        Deaktivieren Sie die Ablaufverfolgung bei Produktionsbereitstellungen, um Leistungseinbußen zu vermeiden.
  <system.diagnostics>     
    <sharedListeners>
      <add name="AzureLocalStorage" type="NumberRecoginzer.Cloud.Service.AzureLocalStorageTraceListener, NumberRecoginzer.Cloud.Service"/>
    </sharedListeners>
    <sources>
      <source name="System.ServiceModel" switchValue="Verbose, ActivityTracing">
        <listeners>
          <add name="AzureLocalStorage"/>
        </listeners>
      </source>
      <source name="System.ServiceModel.MessageLogging" switchValue="Verbose">
        <listeners>
          <add name="AzureLocalStorage"/>
        </listeners>
      </source>
    </sources> 
   </system.diagnostics> -->
  <system.diagnostics>
    <trace>
      <listeners>
        <add type="Microsoft.WindowsAzure.Diagnostics.DiagnosticMonitorTraceListener, Microsoft.WindowsAzure.Diagnostics, Version=2.4.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35"
          name="AzureDiagnostics">
          <filter type="" />
        </add>
      </listeners>
    </trace>
  </system.diagnostics>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
  </system.web>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- Um eine Offenlegung von Metadateninformationen zu verhindern, legen Sie vor der Bereitstellung den folgenden Wert auf "false" fest -->
          <serviceMetadata httpGetEnabled="true"/>
          <!-- Um für das Debugging Ausnahmeinformationen in Fehlern zu erhalten, legen Sie den folgenden Wert auf "true" fest.  Legen Sie den Wert vor der Bereitstellung auf "false" fest, um die Offenlegung von Ausnahmeinformationen zu verhindern. -->
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <!--
        Um während des Debuggens ein Web App-Stammverzeichnis zu durchsuchen, setzen Sie den Wert unten auf "true".
        Setzen Sie ihn vor der Bereitstellung auf "false", um eine Offenlegung von Informationen aus dem Web App-Ordner zu verhindern.
    -->
    <directoryBrowse enabled="true"/>
  </system.webServer>

</configuration>
